<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>eMedOffice</title>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.js" integrity="sha256-EOQQAD7Fyueb25xfLqClMgQm9UNNO9JeZu4IyyDJi/U=" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/@Html.Raw("@")popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans&display=swap" rel="stylesheet">

    <style>
        * {
            font-family: 'Nunito Sans', sans-serif;
        }

        html,
        body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .side-bar ul li {
            padding-left: 10px;
            padding-right: 10px;
            padding: 5px;
        }
        .side-bar ul li.sub {
            padding-left: 30px;
        }

        .side-bar ul li:hover {
            background-color: gray;
        }

        .side-bar ul li a {
            text-decoration: none;
            color: white;
            margin-left: 5px;
        }

        .side-bar {
            float: left;
            width: 15%;
            height: 100%;
            display: inline-block;
            background: #214a80;
            color: white;
            overflow: auto;
        }


        #content {
            height: 100%;
            float: left;
            width: 85%;
            overflow: auto;
        }
        #myTab li button {
           color:black;
        }

        #myTab li button.active {
            border-top-color:chartreuse;
            border-top-style:solid;
            border-top-width:3px;
            font-weight:bold;
        }

        .row .col label {
            padding-top:15px;
            font-size:13px;
            color:dimgrey;
        }

        .btn-success {
            border-color: #8dc73d;
            background-color: #8dc73d;
            color:white;
        }
        .btn-success:hover {
            border-color: #8dc73d;
            background-color: #abe25f;
            color: white;
        }

    </style>
    <script>
        $(function () {

            function updateSelect(apiurl, target) {
                $.ajax({
                    url: apiurl,
                    method: "POST"
                }).done(function (data) {
                    var destination = $(target);
                    destination.children().remove();
                    $.each(data, function (item, element) {
                        destination.append($("<option/>").val(item).text(element));
                    });
                });

                console.log(this.value);
            }

            $("#state").change(function () {
                updateSelect("/api/pass/cities/" + this.value, '#city');
            });
            updateSelect("/api/pass/cities/" + $("#state").val(), '#city');

            $("#stateId").change(function () {
                updateSelect("/api/pass/cities/" + this.value, '#cityId');
            });
            updateSelect("/api/pass/cities/" + $("#stateId").val(), '#cityId');

            $("#insuredStateId").change(function () {
                updateSelect("/api/pass/cities/" + this.value, '#insuredCityId');
            });
            updateSelect("/api/pass/cities/" + $("#stateId").val(), '#cityId');

            $("#secondaryInsuredStateId").change(function () {
                updateSelect("/api/pass/cities/" + this.value, '#secondaryInsuredCityId');
            });
            updateSelect("/api/pass/cities/" + $("#secondaryInsuredStateId").val(), '#secondaryInsuredCityId');
        });
    </script>
</head>
<body>

    <nav class="side-bar p-3">
        <h4>eMedOffice</h4>
        <ul class="list-unstyled">
            <li>
                <a href="/">
                    <i class="bi bi-house-fill"></i>
                    <span class="nav-text">
                        Dashboard
                    </span>
                </a>

            </li>
            <li>
                <a href="/therapist">
                    <i class="bi bi-people-fill"></i>
                    <span class="nav-text">
                        Therapists
                    </span>
                </a>
            </li>
            <li class="sub">
                <a href="/rates">
                    <i class="bi bi-coin"></i>
                    Rates
                 </a>
            </li>
            <li>
                <a href="/client">
                    <i class="bi bi-people-fill"></i>
                    <span class="nav-text">
                        Clients
                    </span>
                </a>
            </li>

        </ul>
        <ul class="list-unstyled" ">
            <li>
                <a href="#">
                    <i class="fa fa-power-off fa-2x"></i>
                    <span class="nav-text">
                        Logout
                    </span>
                </a>
            </li>
        </ul>
    </nav>

    <!-- Page Content  -->
    <div id="content">
        <div class="container">
            <h1 style="text-transform:capitalize">@Html.Raw(this.Request.Url.LocalPath.Split('/')[1])</h1>
            @RenderBody()
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha256-9SEPo+fwJFpMUet/KACSwO+Z/dKMReF9q4zFhU/fT9M=" crossorigin="anonymous"></script>
</body>
</html>
