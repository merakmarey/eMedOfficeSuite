<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>eMedOffice</title>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.js" integrity="sha256-EOQQAD7Fyueb25xfLqClMgQm9UNNO9JeZu4IyyDJi/U=" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css" rel="stylesheet">


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans&display=swap" rel="stylesheet">

    <style>
        * {
            font-family: 'Nunito Sans', sans-serif;
        }
        html, 
        body {
            height:100%;
            margin:0;
            padding:0;
           
        }

        .side-bar ul li {
            padding-left: 10px;
            padding-right: 10px;
            padding: 5px;
        }
        .side-bar ul li:hover {
            background-color:gray;
        }
        .side-bar ul li a {
            text-decoration:none;
            color:white;
        }
        .side-bar {
            float: left;
            width: 15%;
            height:100%;
            display:inline-block;
            background: #214a80;
            color:white;
            overflow:auto;
        }
        

        #content {
            height:100%;
            float:left;
            width:85%;
            overflow:auto;
        }
       
    </style>
</head>
<body>
    
    <nav class="side-bar">
        <ul class="list-unstyled">
            <li>
                <a href="/">
                    <i class="glyphicon-bishop bi-house-fill"></i>
                    <span class="nav-text">
                        Dashboard
                    </span>
                </a>

            </li>
            <li>
                <a href="/therapist">
                    <i class="fa fa-laptop fa-2x"></i>
                    <span class="nav-text">
                        Therapists
                    </span>
                </a>


        </ul>
        <ul class="list-unstyled"">
            <li>
                <a href="#">
                    <i class="fa fa-power-off fa-2x"></i>
                    <span class="nav-text">
                        Logout
                    </span>
                </a>
            </li>
        </ul>
    </nav>

    <!-- Page Content  -->
    <div id="content">
        <div class="container">
            @RenderBody()
        </div>
    </div>
</body>
</html>
