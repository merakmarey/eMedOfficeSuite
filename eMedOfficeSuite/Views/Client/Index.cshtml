@model List<DataEntities.Client.ClientListItem>
<style>
    th:last-child, td:last-child {
        text-align: right
    }
</style>
@if ((Model != null) && (Model.Count > 0))
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Client</th>
                <th><a href="/client/add"><button type="button" class="btn btn-info"><i class="bi bi-person-plus-fill"></i> Add client</button></a></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td class="position-relative">
                        @t.clientFirstname @t.clientMiddleName @t.clientLastName
                    </td>
                    
                    <td><a href="/client/edit/@t.clientId"><i class="glyphicon-bishop bi-pencil-square"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
}
